{
  "name": "@ideanick/webapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "types": "tsc --noEmit --project tsconfig.json && tsc --noEmit --project tsconfig.node.json && tsc --noEmit --project tsconfig.app.json",
    "prettify": "prettier --log-level warn --write \"src/**/*.{ts,tsx,js,json,yml,scss}\" \"*.{ts,tsx,js,json,yml,scss}\"",
    "stylelint": "stylelint --cache --cache-location ./node_modules/.cache/.stylelintcache 'src/**/*.scss'",
    "stylecheck": "sass --update -q ./src:./node_modules/.cache/.stylecheckcache",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ideanick/backend": "workspace:*",
    "@tanstack/react-query": "^5.90.11",
    "@trpc/client": "^11.7.2",
    "@trpc/react-query": "^11.7.2",
    "formik": "^2.4.9",
    "formik-validator-zod": "^2.2.0",
    "js-cookie": "^3.0.5",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts,.tsx .",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-helmet-async": "^2.0.5",
    "react-infinite-scroller": "^1.2.6",
    "react-router-dom": "^7.9.6",
    "superjson": "^2.2.6",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.1.13",
    "zod-formik-adapter": "^2.0.0"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-infinite-scroller": "^1.2.5",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "globals": "^16.5.0",
    "prettier": "^3.7.3",
    "reset-css": "^5.0.2",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-svgr": "^4.5.0"
  }
}
